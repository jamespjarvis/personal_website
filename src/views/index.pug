html.no-js(lang='en')
    head
        include partials/head.pug
    body
        include mixins/project.pug
        include mixins/icon-link.pug
        .overlay
        include partials/navbar.pug
        main.section
            #title.container
                p.title.is-1.fade-in-1 
                    | Full 
                    br
                    | Stack
                    br
                    | Web
                    br
                    | Developer
                a#projects-link.title.is-2.fade-in-2(href="#projects")
                    span Projects
                    span.arrow-down
            .container
                #projects
                    +project("Blokus", "Blokus", require("@/assets/icons/blokus.svg"), "A Blokus clone with multiplayer and competitive computer opponents.", "/blokus")
                    +project("Dealer Locator", "Locator", require("@/assets/icons/locator.svg"), "A dealer locater component using Leaflet.js.", "/map")
                    +project("Wordland", "Wordland", require("@/assets/icons/wordland.svg"), "A multiplayer word game.", "/wordland")
                    +project("Datetime Picker", "Datetime Picker", require('@/assets/icons/calendar.svg'), "A component for easy date and time picking.", "https://www.npmjs.com/package/simple-vue2-datetimepicker")
        script(defer='' src='https://use.fontawesome.com/releases/v5.3.1/js/all.js')
